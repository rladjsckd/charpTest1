            //} while (i < 5);
            Console.WriteLine("숫자를 입력해주세요");

            int i;

            do
            {
                i = int.Parse(Console.ReadLine());


                switch (i)
                {
                    case 1:
                        Console.WriteLine("1을 입력하였습니다.");
                        break;
                    case 2:
                        Console.WriteLine("2를 입력하였습니다.");
                        break;
                    default:
                        Console.WriteLine("1 , 2이외에 값을 입력하였습니다.");
                        break;
                }
                if (i == 100)
                {
                    Console.WriteLine("100을 입력하였으니 종료합니다.");
                    break;
                }

            } while (true);
        }
    }
