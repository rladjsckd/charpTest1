{
    internal class Program
    {
        static void Main(string[] args)
        {
            //int i = 0;
            //while (i < 5) 
            //{
            //Console.WriteLine(++i); // ++i = 1 2 3 4 5(전치 연산자), i++ = 0 1 2 3 4(후치 연산자) //전치 연산자는 먼저 실행후 결과 값을 보냄. 후치 연산자는 보낸후에 실행함
            //Console.WriteLine("i : " + i); // 1줄 아래는 무조건 +1
